@namespace Microsoft.FluentUI.AspNetCore.Components
@typeparam TGridItem

<FluentStack Class="resize-options" VerticalAlignment="VerticalAlignment.Center">

    <FluentLabel>@InternalGridContext.Grid.ResizeLabel</FluentLabel>
    <FluentSpacer />
    <FluentButton OnClick="HandleShrinkAsync">
        <FluentIcon Value="@(new CoreIcons.Regular.Size24.Subtract())"  />
    </FluentButton>
    <FluentButton OnClick="HandleGrowAsync">
        <FluentIcon Value="@(new CoreIcons.Regular.Size24.Add())" />
    </FluentButton>
    <FluentButton OnClick="HandleResetAsync">
        <FluentIcon Value="@(new CoreIcons.Regular.Size24.ArrowReset())" />
    </FluentButton>
</FluentStack>

